" key mapping {
    noremap <leader>r :new $MYVIMRC<CR>
    noremap <silent> <leader>R :source $MYVIMRC<CR>:filetype detect<CR>:exe ":echo 'vimrc reloaded'"<CR>

    " FZF mapping
    nmap <leader>f :FZF<cr>

    " LeaderF mapping
    nmap <leader>F :LeaderfFunction!<cr>

    " Ack,  don't jump to first result automatically
    nnoremap <leader>a :Ack!<Space><C-R>=expand("<cword>")<CR><CR>

    inoremap <A-h> <C-o>h
    inoremap <A-j> <C-o>j
    inoremap <A-k> <C-o>k
    inoremap <A-l> <C-o>l
"    imap jj <Esc>
"    imap hj <Esc>
"    imap jh <Esc>
    inoremap jj <Esc>
    inoremap hh <Esc>
    inoremap hj <Esc>
    inoremap jh <Esc>

"    nmap <leader>1 :TagbarToggle<cr>
"    nmap <leader>2 :NERDTreeToggle<cr>
"    nmap <F4> :SrcExplToggle<cr>
    nmap <C-h> :noh<cr>
    nmap <leader>7 :bn<cr>
    nmap <leader>8 :bp<cr>

    " abt quickfix
    " :cw		open matched window
    " :cclose	close matched window
    " current map leadr is \
    nmap <leader>5 :cw<cr>
    nmap <leader>6 :cclose<cr>
    nmap <leader>3 :cp<cr>
    nmap <leader>4 :cn<cr>

"    nmap <F12> :call TagsUpdate()<cr>
    nmap <F12> :call CscopeTagUpdate()<cr>
    nmap <silent> <Leader><space> :call <SID>StripTrailingWhitespace()<CR>
    nmap <leader>wn :match Error /\s\+$/<CR>
    nmap <leader>tn :match Error /\t/<CR>
"}
