" self config {
    set nocompatible
    set scrolloff=4 " 4 lines above/below cursor when scrolling
    set ignorecase  " case insensitive
    set smartcase   " but become case sensitive if typr uppercase
    set number      " show line number
    set ruler       " show cursor position in status bar
    set title       " show file in titlebar
    set incsearch
    set hlsearch
    set tabstop=4
    set softtabstop=4
    set shiftwidth=4
    set expandtab
    set backspace=2
    set mouse=a
    "set mouse=v
    set showmatch
    set matchtime=2
    set cursorline
    set laststatus=2    "statusline always on
    set encoding=utf-8  " Necessary to show unicode glyphs
    set fileencodings=ucs-bom,utf-8,latin1,chinese
"}

" ctags {
set tags=./tags,tags;

" plugin config
" cscope
if has("cscope")

    """"""""""""" Standard cscope/vim boilerplate

    " use both cscope and ctag for 'ctrl-]', ':ta', and 'vim -t'
    set cscopetag

    " check cscope for definition of a symbol before checking ctags: set to 1
    " if you want the reverse search order.
    set csto=0
    set cst
    set csverb

    " add any cscope database in current directory
    "    if filereadable("cscope.out")
    "        cs add cscope.out
    " else add the database pointed to by environment variable
    "    elseif $CSCOPE_DB != ""
    "        cs add $CSCOPE_DB
    "    endif

    " show msg when any other cscope db added
    set cscopeverbose

    " set quickfix
    set cscopequickfix=s-,g-,c-,d-,i-,t-,e-
endif
"}

" Update tags file {
function! TagsUpdate()
    if !filereadable("cscope.file")&&!len(tagfiles())
        exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.[c|h]*\"" . " > "
                    \. "cscope.files"
        exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.asm*\"" . " > "
                    \. "cscope.files"
        exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.mk*\"" . " >> "
                    \. "cscope.files"
        exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.config*\"" . " >> "
                    \. "cscope.files"
        exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.in*\"" . " >> "
                    \. "cscope.files"
    endif

"    let g:SrcExpl_updateTagsCmd="cscope -bkq"
"    let g:SrcExpl_updateTagsCmd="ctags --sort=foldcase -L cscope.files"
"    call g:SrcExpl_UpdateTags()
   exe "!cscope -bkq"
   exe "!ctags --sort=foldcase -L cscope.files"
endfunction
"}

" Update cscope and ctags {
function! CscopeTagUpdate()
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.[c|h]*\"" . " > "
                \. "cscope.files"
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.asm*\"" . " > "
                \. "cscope.files"
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.s*\"" . " > "
                \. "cscope.files"
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.mk*\"" . " >> "
                \. "cscope.files"
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.config*\"" . " >> "
                \. "cscope.files"
    exe "!find" . " `pwd`" . " -type f" . " -name" . " \"*.in*\"" . " >> "
                \. "cscope.files"
endfunction
"}

" EOL whitespace
function! <SID>StripTrailingWhitespace()
    " Preparation: save last search, and cursor position.
    let _s=@/
    let l = line(".")
    let c = col(".")
    " Do the business:
    %s/\s\+$//e
    " Clean up: restore previous search history, and cursor position
    let @/=_s
    call cursor(l, c)
endfunction

